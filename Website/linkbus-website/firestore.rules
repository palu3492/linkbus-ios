rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /{document=**} {
      allow read
    }
    match /alerts/{alertId} {
    	allow read, write: if request.auth.uid == "1J6yYtccJ3c7ZeiAqUOuDpAgZvo1" // PRODUCTION VARIABLE
    }
    match /routes/{routeId} {
    	allow read, write: if request.auth.uid == "1J6yYtccJ3c7ZeiAqUOuDpAgZvo1" // PRODUCTION VARIABLE
    }
    match /messages/{messageId} {
    	allow read, write: if request.auth.uid == "1J6yYtccJ3c7ZeiAqUOuDpAgZvo1" // PRODUCTION VARIABLE
    }
  }
}
